{
  "name": "kanban-desktop",
  "title": "kanban-desktop",
  "version": "2.9.0",
  "description": "Kanban Desktop Electron Based",
  "homepage": "https://github.com/jimhans/live2d-kanban-desktop/",
  "buildinf": "Stable Build 2024-08-01",
  "main": "index.js",
  "scripts": {
    "start": "electron-forge start",
    "pack": "electron-builder --dir",
    "pack-linux": "electron-builder --linux",
    "dist": "electron-builder",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "keywords": [
    "AI",
    "Kanban"
  ],
  "author": "JimHan",
  "license": "GPL",
  "build": {
    "productName": "Kanban-Desktop",
    "appId": "com.Zerolite.Kanban-Desktop",
    "copyright": "2024 JimHan & Zerolite Studio All Rights Reserved.",
    "asar": true,
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis"
        }
      ],
      "icon": "./assets/app.ico",
      "asarUnpack": [
        "src/**",
        "README.md",
        "includes/waifu-tips.json",
        "assets/alarm.png",
        "./node_modules/node-notifier/vendor/**"
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage"
        }
      ],
      "icon": "./assets/applogo.png",
      "asarUnpack": [
        "src/**",
        "README.md",
        "includes/waifu-tips.json",
        "assets/alarm.png",
        "./node_modules/node-notifier/vendor/**"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./install.ico",
      "uninstallerIcon": "./install.ico",
      "installerHeaderIcon": "./assets/app.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Kanban-Desktop"
    }
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.11.1",
    "@electron-forge/core": "^7.11.1",
    "@electron-forge/maker-deb": "^7.11.1",
    "@electron-forge/maker-msix": "^7.11.1",
    "@electron-forge/maker-rpm": "^7.11.1",
    "@electron-forge/maker-squirrel": "^7.11.1",
    "@electron-forge/maker-zip": "^7.11.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.11.1",
    "@electron-forge/plugin-fuses": "^7.11.1",
    "@electron/fuses": "^1.8.0",
    "electron": "^22.3.25"
  },
  "dependencies": {
    "@electron/remote": "^2.1.0",
    "axios": "^1.6.2",
    "bingai-js": "^1.7.0",
    "electron-squirrel-startup": "^1.0.1",
    "node-gyp": "^9.4.1",
    "node-notifier": "^10.0.1",
    "node-schedule": "^2.1.1",
    "rpm": "^0.0.0",
    "rpmbuild": "^0.0.23",
    "semver": "^6.3.1"
  }
}
